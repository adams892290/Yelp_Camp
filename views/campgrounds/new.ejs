<% layout("layout/boilerplate") -%>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" placeholder="Title" name="title" id="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" placeholder="Location" name="location" id="location"
                        required>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image URL:</label>
                    <input class="form-control" type="text" placeholder="Image" name="image" id="image" required>
                </div> -->
                <div class="form-file">
                    <input class="form-file-input" type="file" id="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file=text">Choose image(s)..</span>
                        <span class="form-file-button">Browse</span>
                    </label>

                </div>

                <input type="file" id="" name="image" multiple>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" rows="3" name="description"
                        placeholder="Description" required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Rs.</span>
                        <input type="text" name="price" class="form-control" placeholder="00" aria-label="price"
                            aria-describedby="basic-addon1" id="price" required>
                    </div>
                </div>
                <button class="btn btn-success mt-2">Add Campground</button>
            </form>
        </div>

    </div>