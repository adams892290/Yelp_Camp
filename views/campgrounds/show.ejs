<% layout("layout/boilerplate") -%>
    <div class="row">
        <div class="col-6 ">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% foundCamp.image.forEach(function(img,i){ %>

                        <div class="carousel-item <%=i==0? " active":""%> ">
                            <img class="d-block w-100" src="<%=img.url%> " alt="First slide">
                        </div>

                        <% }) %>
                </div>
                <% if(foundCamp.image.length>1){ %>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <% } %>
            </div>

            <div class="card mb-3">
                <div class="card-header display-5 lead">
                    Yelp Camp
                </div>
                <!-- <% for(let img of foundCamp.image) {%>
                    <img src="<%=img.url%>" class="card-img-top" alt="...">
                    <% } %> -->
                <div class="card-body">
                    <h5 class="card-title">
                        <%=foundCamp.title%>
                    </h5>
                    <p class="card-text">
                        <%=foundCamp.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Rs.<%=foundCamp.price%>/night</li>
                    <li class="list-group-item">
                        <%=foundCamp.location%>
                    </li>
                    <li class="list-group-item">Created By <%=foundCamp.author.username%>
                    </li>
                </ul>
                <%if(currentUser&&currentUser._id.equals(foundCamp.author._id)){%>
                    <div class="card-body">

                        <a class="card-link btn btn-info" href="/campgrounds/<%=foundCamp._id%>/edit">Edit</a>

                        <form class="d-inline" method="POST" action="/campgrounds/<%=foundCamp._id%>?_method=DELETE">
                            <button class="btn btn-danger">Delete</button>
                        </form>

                        <a href="/campgrounds/<%=foundCamp._id%>/newimg" class="btn btn-secondary">Upload Images</a>

                    </div>
                    <% } %>
                        <div class="card-footer text-muted">
                            9 days ago
                        </div>

            </div>
        </div>


        <div class="col-6">
            <div id='map'></div>
            <% if(currentUser){ %>
                <div>
                    <form action="/campgrounds/<%=foundCamp._id%>/reviews" method="POST" novalidate
                        class="needs-validation">
                        <!-- <div>
                            <label for="rating" class="form-label">Rating:</label>
                            <input class="form-control" type="range" min="1" max="5" id="rating" name="rating">
                        </div>  -->
                        <h3>Leave A Review</h3>
                        <fieldset class="starability-grow">

                            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                                aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="rating" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="rating" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="rating" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="rating" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="rating" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                        <div> <label for="body" class="form-label">Review:</label>
                            <textarea class="form-control" id="body" row="30" col="10" name="body" required></textarea>
                        </div>
                        <button class="btn btn-success">Submit</button>
                    </form>
                </div>
                <% } %>
                    <% for(let review of foundCamp.reviews){ %>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=review.author.username%>
                                </h5>
                                <p class="starability-result" data-rating="<%=review.rating%>">
                                    Rated: <%=review.rating%> stars
                                </p>

                                <p class="card-text">Review:<%=review.body%>
                                </p>

                            </div>
                        </div>
                        <% if(currentUser&&currentUser._id.equals(review.author._id)) {%>
                            <form method="POST"
                                action="/campgrounds/<%=foundCamp._id%>/reviews/<%=review._id%>?_method=DELETE">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <% } %>
                                <% } %>
        </div>
    </div>
    <script>
        const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
        const camp = '<%-JSON.stringify(foundCamp)%>';
    </script>

    <script src="/javascripts/showPageMap.js"></script>