<% layout("layout/boilerplate") -%>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=foundCamp._id%>?_method=PATCH" method="POST" novalidate
                class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" placeholder="Title" name="title" id="title"
                        value="<%=foundCamp.title%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" placeholder="Location" value="<%=foundCamp.location%>"
                        name="location" id="location" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL:</label>
                    <input class="form-control" type="text" placeholder="Image" value="<%=foundCamp.image%>"
                        name="image" id="image" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" rows="3" name="description"
                        required><%=foundCamp.description%></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Rs.</span>
                        <input type="text" name="price" value="<%=foundCamp.price%>" class="form-control"
                            placeholder="00" aria-label="price" aria-describedby="basic-addon1" id="price" required>
                    </div>
                </div>
                <button class="btn btn-info mt-2">Update Campground</button>
            </form>
        </div>

    </div>